<div class="container">

  <h1>Товары</h1>
  <table class="ui celled table">
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Изображение</th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td>
          <h3><%= product["name"] %></h3>
        </td>
        <td>
          <h3><%= product["description"] %></h3>
        </td>
        <td>
          <h3><%= product["price"] %></h3>
        </td>
        <td>
          <%# if product.picture.attached? %>
            <%#= image_tag product.picture, size: 100 %>
          <%# end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br><br>
  <form id="formId" action="http://ar-1-2-esdp-1.ltestl.com/api/v1/orders/create?product_id=1" method="post">

    <div class="form-group">
      <label for="exampleInputEmail1">Ваше Имя</label>
      <input type="text" class="form-control" id="exampleInputEmail1" name="order[client_name]" aria-describedby="emailHelp" placeholder="Введите Имя">

    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Ваш номер телефона</label>
      <input type="number" class="form-control" name="order[client_phone]" id="exampleInputPassword1" placeholder="Введите номер">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>

</div>
